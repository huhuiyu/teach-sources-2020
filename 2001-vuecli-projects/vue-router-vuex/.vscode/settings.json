{
  // 文件视图排除的配置
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  // 去掉分号
  "prettier.semi": false,
  // 字符串单引号
  "prettier.singleQuote": true,
  // 配置结束标记不要折断
  "prettier.htmlWhitespaceSensitivity": "strict",
  "prettier.printWidth": 400,
  "prettier.proseWrap": "preserve",
  // json自动补逗号
  "prettier.trailingComma": "es5",
  // 换行符为windows版本
  "prettier.endOfLine": "crlf",
  // 文件类型的默认格式化程序配置，都是prettier
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
